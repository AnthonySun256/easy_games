{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 生成活动文件",
            "command": "gcc",
            "args": [
                "-I/usr/include/SDL2",
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/si78c.c",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "-lSDL2"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "调试器生成的任务。"
        },
    ],
    "version": "2.0.0"
}